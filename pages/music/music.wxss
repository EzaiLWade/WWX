/* pages/music/music.wxss */
audio{
    display:flex;
    position:fixed;
    bottom:0px;
}
.music{
    display: flex;
    margin-bottom:20px;
    padding-left:50px;
}
.musicPoster{
    width:80px;
    height:80px;
    margin: 0 25px;
    overflow:hidden;
    border-radius:50%;
}
image{
    width:80px;
    height:80px;
}
.musicAuthor{
    line-height: 40px;
    font-size:13px;
    color:#999;
}
#myAudio{
    width:100%;
    display:block;
}
.wx-audio-default{
    width:100%;
}
.wx-audio-default .wx-audio-right{
    text-align: center;
}


